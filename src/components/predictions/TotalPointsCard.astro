---
import SectionHeading from "@/components/races/SectionHeading.astro";
import NavLink from "@/components/globals/NavLink.astro";

interface Props {
  isNav: boolean;
  heading: string;
  season: string;
  mattRacePredictionsPoints: number;
  tommyRacePredictionsPoints: number;
}

const {
  isNav,
  heading,
  season,
  mattRacePredictionsPoints,
  tommyRacePredictionsPoints,
}: Props = Astro.props;
---

<section>
  <SectionHeading>{heading}</SectionHeading>
  <div
    class="mt-8 text-5xl md:text-7xl font-black p-4 place-items-center rounded-lg grid grid-cols-2 bg-gradient-to-r from-violet-500 to-fuchsia-500"
  >
    <h2>{mattRacePredictionsPoints}</h2>
    <h2>{tommyRacePredictionsPoints}</h2>
  </div>
  {
    isNav && (
      <div class="mt-4">
        <NavLink
          href={`/seasons/${season}`}
          label={`All ${season} predictions`}
        />
      </div>
    )
  }
</section>
